<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BuJoApp.Avalonia.ViewModels;assembly=BuJoApp.Avalonia"
        Icon="resm:BuJoApp.Avalonia.Assets.avalonia-logo.ico"
        Title="BuJoApp.Avalonia">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock TextAlignment="Center" FontSize="30" Grid.Row="0" Text="Add a new Page to your Bullet Journal!"/>

    <TextBox Grid.Row="1" Text="{Binding Title}" />

    <TextBox Grid.Row="2" Text="{Binding Content}" />

    <TextBox Grid.Row="3" Text="{Binding PageNum}" />

    <Button Grid.Row="4" Command="{Binding AddPageCommand}"  Content="Add New Page" />

    <TextBlock Grid.Row="5" Text="{Binding Title}"/>

    <TextBlock Grid.Row="6" Text="{Binding Content}" />
  </Grid>
  
</Window>